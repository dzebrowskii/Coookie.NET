@{
    ViewData["Title"] = "Menu";
}

<h2>@ViewData["Title"]</h2>
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<div class="menu">
    <a href="@Url.Action("MyAccount", "User")" class="menu-item">My Account</a>
    <button class="menu-item">Saved Recipes</button>
    <button class="menu-item">Friends</button>
    <button class="menu-item">Your Analysis</button>
    <button class="menu-item">Language</button>
    <button class="menu-item">Dark Mode</button>
    <a href="@Url.Action("Rate", "AppRating")" class="menu-item">Rate App</a>
    <button class="menu-item">Recommend App</button>
    <button class="menu-item">About App</button>
    <button class="menu-item">Help</button>
    <button class="menu-item">Sign Out</button>
    <button class="menu-item">Go Back</button>
</div>

<style>
    .menu {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 10px;
        margin-top: 20px;
    }

    .menu-item {
        background-color: #333;
        color: white;
        border: none;
        padding: 15px 30px;
        font-size: 18px;
        cursor: pointer;
        width: 200px;
        text-align: center;
    }

    .menu-item:hover {
        background-color: #555;
    }
</style>