<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - WebApplication4</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/WebApplication4.styles.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
<header class="header">
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm" style="background-color: #faf6f1;">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" style="color: black;">Coookie</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <!-- Add other nav items here if needed -->
            </div>
            <button id="toggle-dark-mode" class="btn btn-dark ml-auto">Dark</button>
        </div>
    </nav>
</header>

<style>
    body {
        background: #faf6f1;
    }
    .dark-mode {
        background-color: #121212;
        color: #ffffff;
    }
    .dark-mode .navbar {
        background-color: #1f1f1f !important;
    }
    .dark-mode .navbar a.navbar-brand {
        color: #ffffff !important;
    }
    .dark-mode .footer {
        background-color: #1f1f1f !important;
        color: #ffffff;
    }
    .dark-mode a {
        color: #bb86fc;
    }
    .dark-mode .btn {
        background-color: #3c3c3c;
        color: #ffffff;
    }
    .dark-mode .menu-button {
        background-color: #3c3c3c;
        color: #ffffff;
    
          
           
    }
    
    .dark-mode .start-button {
            background-color: #3c3c3c;
            color: #ffffff;
        
              
       
        }
</style>

<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="footer" style="background-color: #faf6f1; color: black;">
    <span>© 2024 Coookie</span>
    <a href="@Url.Action("Privacy", "Home")" style="color: black;">Privacy</a>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)

@if (User.Identity.IsAuthenticated)
{
    <p>Logged in as: @User.Identity.Name</p>
}
else
{
    <p>You are not logged in.</p>
}
<script>
    document.addEventListener("DOMContentLoaded", function () {
        var darkMode = localStorage.getItem("darkMode") === "true";
        if (darkMode) {
            document.body.classList.add("dark-mode");
            document.getElementById("toggle-dark-mode").textContent = "Light";
        }

        document.querySelector("#toggle-dark-mode").addEventListener("click", function () {
            darkMode = !darkMode;
            localStorage.setItem("darkMode", darkMode);
            document.body.classList.toggle("dark-mode", darkMode);
            document.getElementById("toggle-dark-mode").textContent = darkMode ? "Light" : "Dark";
        });
    });
</script>
</body>
</html>
