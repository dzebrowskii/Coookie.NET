@model IEnumerable<WebApplication4.Models.User>

@{
    ViewData["Title"] = "User Ranking";
    string[] badges = { "~/gold.png", "~/silver.png", "~/bronze.png" }; // Ścieżki do obrazków odznak
}

<h2>User Ranking</h2>

<table class="table">
    <thead>
    <tr>
        <th>Place in the ranking</th>
        <th>Username</th>
        <th>Points</th>
    </tr>
    </thead>
    <tbody>
    @for (int i = 1; i < Model.Count()+1; i++)
    {
        var user = Model.ElementAt(i-1);
        <tr>
            <td>@i</td>
            <td>
                @if (i < 4)
                {
                    <img src="@Url.Content(badges[i-1])" alt="Badge" style="width:50px;height:50px; margin-right:20px;"/>
                }
                @user.Username
            </td>
            <td>@user.Points</td>
        </tr>
    }
    </tbody>
</table>